<Window x:Class="TradingCompany.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seller Dashboard" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Name="DashboardWindow">

    <Grid Background="{StaticResource GrayColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦 Order Management" Foreground="White" 
                               FontSize="22" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CurrentUserName}" Foreground="White" 
                               VerticalAlignment="Center" Margin="0,0,15,0" FontSize="16" FontWeight="SemiBold"/>

                    <Button Content="Logout" Padding="15,5" Background="White" Foreground="{StaticResource PrimaryColor}" 
                            FontWeight="Bold" BorderThickness="0"
                            Command="{Binding LogoutCommand}" 
                            CommandParameter="{Binding ElementName=DashboardWindow}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="15,15,15,5" Padding="15" CornerRadius="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Date From:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,5,0"/>
                <DatePicker SelectedDate="{Binding StartDate}" Width="110" Margin="0,0,15,0" Language="en-GB"/>

                <TextBlock Text="To:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,5,0"/>
                <DatePicker SelectedDate="{Binding EndDate}" Width="110" Margin="0,0,15,0" Language="en-GB"/>

                <TextBlock Text="Status:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,5,0"/>
                <ComboBox ItemsSource="{Binding Statuses}" 
                          SelectedItem="{Binding SelectedFilterStatus}"
                          DisplayMemberPath="StatusName"
                          Width="140" Margin="0,0,15,0"/>

                <Button Content="Apply" Style="{StaticResource ModernBtn}" 
                        Command="{Binding ApplyFilterCommand}" Width="90"/>

                <Button Content="Reset" Style="{StaticResource ModernBtn}" Background="#9E9E9E"
                        Command="{Binding ResetFilterCommand}" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" Margin="15" 
                  ItemsSource="{Binding Orders}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  HeadersVisibility="Column" 
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1" BorderBrush="#F8BBD0"
                  RowHeight="35" FontSize="14">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="60" IsReadOnly="True" Foreground="Gray"/>

                <DataGridTemplateColumn Header="Date (Edit)" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding OrderDate, UpdateSourceTrigger=PropertyChanged}" 
                                        BorderThickness="0"
                                        Language="en-GB"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}" Width="100" IsReadOnly="True" Foreground="Gray"/>

                <DataGridTextColumn Header="Total Amount" 
                                    Binding="{Binding TotalAmount, StringFormat=C}" 
                                    Width="140" 
                                    IsReadOnly="True" 
                                    FontWeight="Bold"/>

                <DataGridTemplateColumn Header="Status (Edit)" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.Statuses, RelativeSource={RelativeSource AncestorType=Window}}"
                                      DisplayMemberPath="StatusName"
                                      SelectedValuePath="StatusId"
                                      SelectedValue="{Binding StatusId, UpdateSourceTrigger=PropertyChanged}"
                                      Margin="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,20,20">

            <Button Content="Save Changes" Command="{Binding SaveChangesCommand}" 
                    Style="{StaticResource ModernBtn}" Background="#43A047" FontWeight="Bold" Width="160"/>
        </StackPanel>
    </Grid>
</Window>