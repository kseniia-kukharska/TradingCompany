<Window x:Class="TradingCompany.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trading Company Management" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="15">
            <Grid>
                <TextBlock Text="Trading Dashboard" Foreground="White" 
                           FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CurrentUserName}" Foreground="White" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="Logout" Padding="10,5" Background="#D32F2F" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Button Content="Refresh List" Style="{StaticResource ModernBtn}" Command="{Binding RefreshCommand}"/>

                <Button Content="New Order" Style="{StaticResource ModernBtn}" Margin="10,5"/>

                <Button Content="Manage Products (Admin)" 
                        Style="{StaticResource ModernBtn}" 
                        Background="#388E3C"
                        Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>

            <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" AutoGenerateColumns="False" 
                      IsReadOnly="True" HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>