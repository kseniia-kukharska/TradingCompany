<Window x:Class="TradingCompany.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Seller Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Name="MWindow">

    <Grid Background="{StaticResource GrayColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📦 Order Management" Foreground="White" 
                               FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CurrentUserName}" Foreground="White" 
                               VerticalAlignment="Center" Margin="0,0,15,0" FontSize="16"/>

                    <Button Content="Logout" Padding="15,5" Background="White" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold" BorderThickness="0"
                            Command="{Binding LogoutCommand}" 
                            CommandParameter="{Binding ElementName=MWindow}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="15" Padding="15" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Gray"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Date From:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,5,0"/>
                <DatePicker SelectedDate="{Binding StartDate}" Width="120" Margin="0,0,20,0"/>

                <TextBlock Text="To:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,5,0"/>
                <DatePicker SelectedDate="{Binding EndDate}" Width="120" Margin="0,0,20,0"/>

                <TextBlock Text="Status:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,5,0"/>
                <ComboBox ItemsSource="{Binding Statuses}" 
                          SelectedItem="{Binding SelectedFilterStatus}"
                          DisplayMemberPath="StatusName"
                          Width="150" Margin="0,0,20,0"/>

                <Button Content="Apply Filter" Style="{StaticResource ModernBtn}" 
                        Command="{Binding ApplyFilterCommand}" Width="120"/>

                <Button Content="Reset" Style="{StaticResource ModernBtn}" Background="#9E9E9E"
                        Command="{Binding ResetFilterCommand}" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" Margin="15,0,15,15" 
                  ItemsSource="{Binding Orders}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  HeadersVisibility="Column" 
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1" BorderBrush="#DDDDDD"
                  RowHeight="35" FontSize="14">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>

                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="80" IsReadOnly="True"/>

                <DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat=d}" Width="120" IsReadOnly="True"/>

                <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}" Width="100" IsReadOnly="True"/>

                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=C}" Width="120" IsReadOnly="True"/>

                <DataGridTemplateColumn Header="Status (Edit)" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.Statuses, RelativeSource={RelativeSource AncestorType=Window}}"
                                      DisplayMemberPath="StatusName"
                                      SelectedValuePath="StatusId"
                                      SelectedValue="{Binding StatusId, UpdateSourceTrigger=PropertyChanged}"
                                      Margin="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Refresh List" Command="{Binding RefreshCommand}" 
                    Style="{StaticResource ModernBtn}" Background="#0288D1" Margin="0,0,15,0"/>

            <Button Content="Save Changes" Command="{Binding SaveChangesCommand}" 
                    Style="{StaticResource ModernBtn}" Background="#2E7D32" Width="150" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>