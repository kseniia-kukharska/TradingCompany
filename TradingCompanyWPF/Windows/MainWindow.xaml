<Window x:Class="TradingCompany.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Trading Company - Management System" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource GrayColor}"
        FontFamily="Segoe UI">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" 
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DatePicker}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" 
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="20,10" Margin="0,0,0,5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Management Console" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                    <Separator Margin="15,0" Height="20" Background="#EEE"/>
                    <TextBlock Text="Logged in as: " Foreground="#666" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUser.Username}" FontWeight="SemiBold" Foreground="#2196F3" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="Logout" 
                        HorizontalAlignment="Right"
                        Padding="15,5"
                        Background="Transparent" BorderBrush="#DDD" Foreground="#666"
                        Command="{Binding LogoutCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="20" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="From Date" FontSize="11" Foreground="#999" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Width="150"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="To Date" FontSize="11" Foreground="#999" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Width="150"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Status Filter" FontSize="11" Foreground="#999" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Statuses}" 
                                  DisplayMemberPath="StatusName" 
                                  SelectedItem="{Binding SelectedFilterStatus}" 
                                  Width="180"/>
                    </StackPanel>

                    <Button Content="Apply" 
                            Style="{StaticResource ModernBtn}" 
                            Command="{Binding ApplyFilterCommand}" 
                            Width="100" VerticalAlignment="Bottom" Margin="10,0,0,0"/>

                    <Button Content="Reset" 
                            Command="{Binding ResetFilterCommand}"
                            Background="Transparent" BorderThickness="0" Foreground="#2196F3"
                            VerticalAlignment="Bottom" Margin="10,0,0,5" Cursor="Hand"/>
                </StackPanel>

                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Orders}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          BorderThickness="1" BorderBrush="#EEE"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F5F5F5"
                          RowHeight="40" Background="White">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="Foreground" Value="#666"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#EEE"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" IsReadOnly="True" Width="60"/>

                        <DataGridTemplateColumn Header="Order Date" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OrderDate, StringFormat=dd.MM.yyyy}" VerticalAlignment="Center" Margin="5,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding OrderDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Amount" 
                                            Binding="{Binding TotalAmount, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, StringFormat=N2}" 
                                            Width="120"/>

                        <DataGridTemplateColumn Header="Status" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.Statuses, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                              SelectedValue="{Binding StatusId}"
                                              SelectedValuePath="StatusId"
                                              DisplayMemberPath="StatusName"
                                              IsEnabled="False" 
                                              BorderThickness="0" Background="Transparent"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.Statuses, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                              SelectedValuePath="StatusId"
                                              DisplayMemberPath="StatusName"
                                              SelectedValue="{Binding StatusId, UpdateSourceTrigger=PropertyChanged}"
                                              IsDropDownOpen="True"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Save All Changes" 
                            Style="{StaticResource ModernBtn}"
                            Background="#4CAF50"
                            Command="{Binding SaveChangesCommand}" 
                            Visibility="{Binding IsSeller, Converter={StaticResource BoolToVis}}"
                            Width="200" Height="40"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>