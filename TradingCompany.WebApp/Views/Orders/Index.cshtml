@model IEnumerable<TradingCompanyWeb.Models.OrderViewModel>
@{
    ViewData["Title"] = "Order Dashboard";
}

<div class="glass-card p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Order Dashboard</h2>
        @if (User.IsInRole("Seller"))
        {
            <a asp-action="Create" class="btn btn-dark btn-pill shadow">+ Create New Order</a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr class="text-uppercase small fw-bold">
                    <th class="border-0">Order ID</th>
                    <th class="border-0">Date</th>
                    <th class="border-0">Total Amount</th>
                    <th class="border-0">Status</th>
                    <th class="border-0 text-center">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">#@item.OrderId</td>
                        <td>@item.OrderDate.ToString("dd MMM yyyy", new System.Globalization.CultureInfo("en-US"))</td>
                        <td class="fw-bold text-dark">$@item.TotalAmount.ToString("N2")</td>
                        <td>
                            @{
                                var statuses = (IEnumerable<TradingCompanyDto.Status>)ViewBag.Statuses;
                                var current = statuses?.FirstOrDefault(s => s.StatusId == item.StatusId);
                            }
                            <span class="badge rounded-pill bg-dark py-2 px-3">@current?.StatusName</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-light btn-pill border me-1">Details</a>
                                @if (User.IsInRole("Seller"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-dark btn-pill me-1">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-danger btn-pill">Delete</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>