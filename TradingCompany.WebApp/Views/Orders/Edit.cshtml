@model TradingCompanyWeb.Models.OrderViewModel
@{
    ViewData["Title"] = "Edit Order";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="glass-card p-5">
            <h2 class="fw-bold mb-4 text-center text-dark">Edit Order #@Model.OrderId</h2>
            
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="OrderId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 fw-bold"></div>

                <div class="mb-3">
                    <label asp-for="CustomerId" class="form-label">Customer ID</label>
                    <input asp-for="CustomerId" class="form-control" />
                    <span asp-validation-for="CustomerId" class="text-danger small fw-bold"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OrderDate" class="form-label">Order Date</label>
                    <input asp-for="OrderDate" class="form-control" type="date" />
                    <span asp-validation-for="OrderDate" class="text-danger small fw-bold"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TotalAmount" class="form-label">Total Amount</label>
                    <input asp-for="TotalAmount" class="form-control" />
                    <span asp-validation-for="TotalAmount" class="text-danger small fw-bold"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="StatusId" class="form-label">Order Status</label>
                    <select asp-for="StatusId" class="form-select">
                        @foreach (var status in (IEnumerable<TradingCompanyDto.Status>)ViewBag.Statuses)
                        {
                            <option value="@status.StatusId">@status.StatusName</option>
                        }
                    </select>
                </div>

                <div class="d-grid gap-2 mt-5">
                    <button type="submit" class="btn btn-dark py-2 fw-bold" style="border-radius: 50px;">UPDATE ORDER</button>
                    <a asp-action="Index" class="btn btn-link text-dark text-decoration-none fw-bold small">← Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}