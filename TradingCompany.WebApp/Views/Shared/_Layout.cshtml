<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trading System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body { background-color: #f4f7f6; }
        .navbar-brand { font-weight: 800; letter-spacing: 1px; color: #ffc107 !important; }
        .card { border: none; border-radius: 10px; }
        .card-header { border-top-left-radius: 10px !important; border-top-right-radius: 10px !important; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow mb-4">
            <div class="container">
                <a class="navbar-brand" asp-controller="Orders" asp-action="Index">TRADING CORP</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Orders" asp-action="Index">Dashboard</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-warning">Active User: @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-danger btn-sm ms-2 text-white" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    @* Критично важливо для роботи валідації в Edit/Create *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>