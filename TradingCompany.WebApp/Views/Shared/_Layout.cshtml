<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trading Company</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #2c3e50 0%, #bdc3c7 100%);
            background-attachment: fixed;
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

        .navbar-glass {
            background: rgba(44, 62, 80, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .navbar-brand { font-weight: 800; letter-spacing: 1px; color: #fff !important; text-transform: uppercase; }

        .glass-card {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 20px;
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
            margin-top: 2rem;
        }

        .form-label { color: #000 !important; font-weight: 700 !important; text-transform: uppercase; font-size: 0.85rem; }
        .form-control, .form-select { 
            background: #ffffff !important; 
            color: #000 !important; 
            border: 1px solid #ced4da !important;
            opacity: 1 !important; 
        }
        .form-control::placeholder { color: #6c757d; }

        .btn-pill { border-radius: 50px; padding: 8px 24px; font-weight: 600; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-glass mb-4 shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Orders" asp-action="Index">TRADING COMPANY</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-3">
                                <span class="text-white-50 small">Active:</span> <span class="text-white fw-bold">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-pill btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>